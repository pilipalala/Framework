<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />
    <Button
        android:id="@+id/bt_native_tojavaobject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:textSize="@dimen/sp_18"
        android:text="将Json对象转换为Java对象"/>
    <Button
        android:id="@+id/bt_native_tojavalist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:textSize="@dimen/sp_18"
        android:text="将Json数组转换为Java集合"/>
    <Button
        android:id="@+id/bt_native_complex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:textSize="@dimen/sp_18"
        android:text="复杂Json数据解析"/>
    <Button
        android:id="@+id/bt_native_special"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:textSize="@dimen/sp_18"
        android:text="特殊Json数据解析"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:layout_margin="@dimen/dp_5"
                android:textColor="@android:color/holo_blue_light"
                android:text="原始数据"/>
            <TextView
                android:id="@+id/tv_native_orignal"
                android:textSize="@dimen/sp_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:layout_margin="@dimen/dp_5"
                android:textColor="@android:color/holo_blue_light"
                android:text="转换后的数据"/>
            <TextView
                android:id="@+id/tv_native_last"
                android:textSize="@dimen/sp_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
